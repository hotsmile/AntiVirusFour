<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg03">

    <include layout="@layout/titlebar"/>

    <EditText
        android:id="@+id/et_blacknumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/shape"
        android:hint="请输号码"
        android:inputType="phone"
        android:paddingLeft="5dp"
        android:textColor="@color/white"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/et_blackname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:hint="请输号码主人的名字"
        android:textColor="@color/white"
        android:paddingLeft="5dp"
        android:textSize="28sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_blacknumber_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/checkbox_selector"
            android:checked="true"
            android:paddingLeft="25dp"
            android:text="电话拦截"
            android:textColor="@color/colorPrimary"
            android:textScaleX="1.1"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cb_blacknumber_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/checkbox_selector"
            android:checked="false"
            android:paddingLeft="25dp"
            android:textColor="@color/colorPrimary"
            android:textScaleX="1.1"
            android:textSize="20sp"
            android:text="短信拦截" />

    </LinearLayout>

    <Button
        android:id="@+id/add_blacknum_btn"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/add_btn_selector_securityphone"
        android:text="添加黑名单"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/add_fromcontact_btn"
        android:layout_width="238dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/add_btn_selector_securityphone"
        android:text="从联系人列表里面选择"
        android:textColor="@color/white" />


</LinearLayout>